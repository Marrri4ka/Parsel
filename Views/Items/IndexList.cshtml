@using Parcels.Models ;



<h1>Shipping Items List</h1>
<ul>

@if (Model.Count == 0)
{
  <p>You have no items in your list!</p>
}
@if(@Model.Count != 0)
{
  @foreach (Item product in Model)
{
  <li>@product.GetDescription().ToUpper() : Weight: @product.GetWeight()lb ; Dimensions: @product.GetWidth() inches * @product.GetHeight() inches * @product.GetLength() inches : Price of the shipping = @product.GetCost() $</li>
}
}
</ul>
<a href="/items/new">Add a new Item.</a>
